<header id="top-header">
    <span class="siteName">
      <a href="/" title="Return to home page">CSE Motors</a>
    </span>

    <div id="tools">
      <% if (locals.loggedin) { %>
        <a href="/account/update-account/<%= locals.accountData.account_id %>" class="welcome-name">
          Welcome <%= locals.accountData.account_firstname %>
        </a>
        <a href="/account/logout" class="account-button">Logout</a>
      <% } else { %>
          <a href="/account/login" class="account-button">My Account</a>
      <% } %>
  </div>
</header>