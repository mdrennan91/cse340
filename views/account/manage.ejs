<div class="manage">
    <% if (accountData) { %>
        <h1>Welcome <%= accountData.account_firstname %></h2>
        <p>You're logged in.</p>
        <% if (Array.isArray(messages) && messages.length > 0) { %>
            <div class="flash-messages">
              <% messages.forEach(message => { %>
                <p><%= message %></p>
              <% }) %>
            </div>
        <% } %>

        <div class="account-management-section">
            <h2>Account Management</h3>
            <p class="form-note">Select the button below to update account information.</p>
            <p><a href="/account/update-account/<%= accountData.account_id %>" class="btn">Update Account Info</a></p>
        </div>

        <% if (accountData.account_type === 'Admin' || accountData.account_type === 'Employee') { %>
            <div class="inventory-management-section">
                <h2>Inventory Management</h3>
                <p class="form-note">Select the button below to access inventory management.</p>
                <p><a href="/inv" class="btn">Inventory Management</a></p>
            </div>
        <% } %>
    <% } %>
</div>

