<div class="classification-container">
    <h1>Delete Classification</h1>
    <% if (messages.length > 0) { %>
        <div class="flash-messages">
            <% messages.forEach(message => { %>
                <p><%= message %></p>
            <% }) %>
        </div>
    <% } %>
    <% if (errors) { %>
        <ul class="error-messages">
            <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>
    <form action="/inv/delete-classification" method="POST" novalidate>
        <label for="classificationId">Classification:</label>
        <select id="classificationId" name="classification_id" required>
            <%- classificationList %>
        </select>
        <button type="submit">Delete Now</button>
    </form>
</div>