<div class="delete-container">
    <h1>Delete Classification</h1>
    <p class="form-warning">Warning! Deleting a classification will permanently delete all data within that classification.</p>

    <% if (messages && messages.length > 0) { %>
      <div class="flash-messages">
          <% messages.forEach(message => { %>
              <p><%= message %></p>
          <% }) %>
      </div>
    <% } %>

    <% if (errors) { %>
      <ul class="notice">
        <% errors.array().forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>

    <form action="/inv/delete-classification" method="POST">
      <label for="classificationList">Classification:</label>
      <%- classificationList %>
      <button type="submit">Delete Now</button>
    </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
      const classificationSelect = document.getElementById('classificationList');
  
      classificationSelect.addEventListener('change', function() {
        if (classificationSelect.value) {
          classificationSelect.style.borderLeftColor = 'green';
        } else {
          classificationSelect.style.borderLeftColor = 'red';
        }
      });
  
      // Initialize border color based on initial value
      if (classificationSelect.value) {
        classificationSelect.style.borderLeftColor = 'green';
      } else {
        classificationSelect.style.borderLeftColor = 'red';
      }
    });
</script>